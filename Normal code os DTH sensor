#include "DHT.h"

#define DHTPIN 4
#define DHTTYPE DHT11

DHT dht(DHTPIN, DHTTYPE);

void setup() {
  Serial.begin(9600);
  dht.begin();
}

void loop() {
  delay(2000);  // Wait 2 seconds

  float temp = dht.readTemperature();      // Celsius
  float humi = dht.readHumidity();         // Humidity

  Serial.print("Temp: ");
  Serial.print(temp);
  Serial.print(" Â°C, Humidity: ");
  Serial.print(humi);
  Serial.println(" %");
}
